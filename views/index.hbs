{{#if products.length}}
  <div class="row">
    {{#each products}}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img
            class="card-img-top"
            src={{image}}
            data-holder-rendered="true"
            style="height: 280px; width: 100%; display: block;"
          />
          <div class="card-body">
            <h5 class="card-title fw-bold">{{title}}</h5>
            <div class="d-flex justify-content-between align-items-center">
              <p style="margin : 0">{{formatDate createdAt}}</p>
              <small class="text-muted fs-5 text-end">${{price}}.00</small>
            </div>
          </div>
          <div class="card-footer">
            <div
              class="btn-group btn-group-sm"
              role="group"
              aria-label="Basic example"
            >
              <a
                type="button"
                class="btn btn-outline-primary"
                href="/product/{{_id}}"
              >Details</a>
              {{#if @root.token}}
                {{#ifequal user @root.userId}}
                  <a
                    type="button"
                    class="btn btn-outline-success"
                    href="/edit-product/{{_id}}"
                  >Edit</a>
                  <form
                    action="/delete-product/{{_id}}"
                    method="post"
                    class="btn btn-outline-danger m-0"
                  >
                    <button type="submit" class="delete-btn">
                      Delete
                    </button>
                  </form>
                {{/ifequal}}
              {{/if}}
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1>There is no products available</h1>
{{/if}}