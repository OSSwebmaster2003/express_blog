{{#if myProducts.length}}
  <div class="row">
    {{#each myProducts}}
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <img
            class="card-img-top"
            src={{image}}
            data-holder-rendered="true"
            style="height: 280px; width: 100%; display: block;"
          />
          <div class="card-body">
            <h5 class="card-title fw-bold">{{title}}</h5>
            <h5 class="card-title">{{description}}</h5>
            <div class="d-flex justify-content-between align-items-center">
              <div
                class="d-flex align-items-center justify-content-start gap-3"
              >
                <div class="avatar bg-primary">
                  <p>{{getFullNameCharacter user.firstName user.lastName}}
                  </p>
                </div>
                <p class="p-0 m-0">{{user.firstName}} {{user.lastName}}</p>
              </div>
              <small class="text-muted fs-5 text-end">${{price}}.00</small>
            </div>
          </div>
          <div class="card-footer">
            <div
              class="btn-group btn-group-sm"
              role="group"
              aria-label="Basic example"
            >
              <a
                type="button"
                href="/product/{{_id}}"
                class="btn btn-outline-primary"
              >Details</a>
              <a
                type="button"
                class="btn btn-outline-success"
                href="/edit-product/{{_id}}"
              >Edit</a>
              <button
                type="button"
                class="btn btn-outline-danger"
              >Delete</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <h1>There is no products available</h1>
  <a href="/add">Add some Products</a>
{{/if}}